<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_empty"
    android:background="@color/c_ff"
    android:paddingTop="@dimen/qb_px_40"
    android:paddingBottom="@dimen/qb_px_40"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_no_data_1" />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_35"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:text="您的咨询暂时还没有律师回复、如着急处理，建议发起快速咨询，律师5-10分钟内快速回电，迅速解决您的困惑。"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/c_b4b4b4"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="@dimen/qb_px_258"
        android:layout_height="@dimen/qb_px_61"
        android:gravity="center"
        android:background="@drawable/round_40_06a66a_all"
        android:layout_marginTop="@dimen/qb_px_35"
        android:textColor="@color/c_ff"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="快速咨询"/>


</LinearLayout>