<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_90"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_basic_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qb_px_40"
        android:gravity="center"
        android:text="个人类"
        android:textColor="@color/c_323232"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_basic_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_10"
        android:src="@drawable/round_100_1ec78a_all"
        app:layout_constraintBottom_toBottomOf="@id/tv_basic_info"
        app:layout_constraintEnd_toEndOf="@id/tv_basic_info"
        app:layout_constraintStart_toStartOf="@id/tv_basic_info" />

    <TextView
        android:id="@+id/tv_practice_experience"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="企业类"
        android:textColor="@color/c_323232"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_basic_info"
        app:layout_constraintEnd_toStartOf="@id/tv_service_price"
        app:layout_constraintStart_toEndOf="@id/tv_basic_info" />

    <ImageView
        android:id="@+id/iv_practice_experience"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_10"
        android:src="@drawable/round_100_1ec78a_all"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_practice_experience"
        app:layout_constraintEnd_toEndOf="@id/tv_practice_experience"
        app:layout_constraintStart_toStartOf="@id/tv_practice_experience" />

    <TextView
        android:id="@+id/tv_service_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/qb_px_40"
        android:gravity="center"
        android:text="刑事类"
        android:textColor="@color/c_323232"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_basic_info"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_service_price"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_10"
        android:src="@drawable/round_100_1ec78a_all"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_price"
        app:layout_constraintEnd_toEndOf="@id/tv_service_price"
        app:layout_constraintStart_toStartOf="@id/tv_service_price" />

    <View
        android:id="@+id/view_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/c_f4f4f4"
        app:layout_constraintBottom_toBottomOf="@id/tv_basic_info"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline2" />
</android.support.constraint.ConstraintLayout>
