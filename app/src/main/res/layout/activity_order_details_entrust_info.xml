<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/qb_px_60"
    android:layout_marginRight="@dimen/qb_px_60"
    android:layout_marginBottom="@dimen/qb_px_30"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_50"
        android:text="订单信息"
        android:textColor="@color/c_737373"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_30"
        android:background="@color/c_d8d8d8" />

    <LinearLayout
        android:id="@+id/ll_info_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="订单编号" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单日期"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="订单日期" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_server_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务名称"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="服务名称" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_info_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_EB5514"
            tools:text="订单状态" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件名称"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="案件名称" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地&#8195;&#8195;区"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="地区" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_info_entrust_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件类型"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_entrust_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="案件类型" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理方式"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="代理方式" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_price_bidding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涉案金额"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_price_bidding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="涉案金额" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_price_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="愿意支付的律师费"
            android:textColor="@color/c_737373" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_2"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_weight="1"
            android:background="@drawable/shape_dash_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_info_price_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_737373"
            tools:text="愿意支付的律师费" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_entrust_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_info_entrust_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_10_f7f7f7_all"
            android:lineSpacingExtra="@dimen/qb_px_10"
            android:padding="@dimen/qb_px_20"
            android:maxLength="300"
            android:minLines="3"
            android:hint="这里是案件信息"
            android:textColor="@color/c_737373"
            tools:text="平台服务费平台服平台服务费平台服务费" />

    </LinearLayout>

</LinearLayout>
