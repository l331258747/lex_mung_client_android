<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_withe_down"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="@dimen/qb_px_20"
        android:layout_height="@dimen/qb_px_20"
        android:layout_marginStart="@dimen/qb_px_35"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tv_title"
        tools:src="@drawable/round_100_f02457_all" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_80"
        android:layout_marginTop="@dimen/qb_px_35"
        android:layout_marginEnd="@dimen/qb_px_80"
        android:includeFontPadding="false"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/qb_px_35"
        tools:text="标题" />

    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_35"
        android:layout_marginRight="@dimen/qb_px_35"
        android:layout_toStartOf="@id/item_iv_icon"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/c_323232"
        android:textColorHint="@color/c_b5b5b5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_title"
        app:layout_constraintEnd_toStartOf="@+id/iv_next"
        app:layout_constraintStart_toEndOf="@+id/item_tv_title"
        app:layout_constraintTop_toTopOf="@+id/item_tv_title"
        android:gravity="right"
        tools:text="内容内容内容内容内容内容内" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30"
        android:layout_marginEnd="@dimen/qb_px_90"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tv_title" />

    <View
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginStart="@dimen/qb_px_80"
        android:layout_marginEnd="@dimen/qb_px_80"
        android:layout_marginTop="@dimen/qb_px_35"
        android:background="@color/c_f4f4f4"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_title"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>