<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="@dimen/qb_px_580"
    android:layout_height="wrap_content"
    android:background="@drawable/round_10_ffffff_all"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_90"
        android:background="@drawable/round_10_06a66a_top"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="温馨提示"
        android:textColor="@color/c_ff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_35"
        android:layout_marginTop="@dimen/qb_px_35"
        android:layout_marginEnd="@dimen/qb_px_35"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/qb_px_15"
        android:textColor="@color/c_323232"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_marginTop="@dimen/qb_px_35"
        android:background="@color/c_06a66a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_cancel"
            android:textColor="@color/c_b5b5b5"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="@dimen/qb_px_30"
            android:background="@color/c_717171" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="电话咨询"
            android:textColor="@color/c_06a66a"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
