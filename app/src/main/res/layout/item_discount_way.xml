<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qb_px_35"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_select"
        android:layout_width="@dimen/qb_px_35"
        android:layout_height="@dimen/qb_px_35"
        android:layout_marginStart="@dimen/qb_px_35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.lex_mung.client_android.mvp.ui.widget.RoundImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_190"
        android:layout_marginStart="@dimen/qb_px_25"
        android:layout_marginEnd="@dimen/qb_px_35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_iv_select" />
</android.support.constraint.ConstraintLayout>