<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_empty"
    android:background="@color/c_f4f4f4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_250"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_no_data_1" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_35"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/text_no_data"
        android:textColor="@color/c_323232"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="@dimen/qb_px_258"
        android:layout_height="@dimen/qb_px_61"
        android:gravity="center"
        android:layout_marginTop="@dimen/qb_px_40"
        android:background="@drawable/round_40_06a66a_all"
        android:textColor="@color/c_ff"
        android:visibility="gone"
        android:text="去咨询"/>
</LinearLayout>