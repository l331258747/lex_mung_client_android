<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qb_px_115"
    android:gravity="center">

    <TextView
        android:id="@+id/item_tv_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:layout_toStartOf="@id/item_view"
        android:background="@drawable/round_10_ffffff_all_06a66a"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/c_06a66a"
        android:textSize="18sp" />

    <View
        android:id="@+id/item_view"
        android:layout_width="@dimen/qb_px_35"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_35"
        android:layout_alignParentBottom="true" />
</RelativeLayout>