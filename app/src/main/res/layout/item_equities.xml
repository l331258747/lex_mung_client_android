<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_35"
    android:gravity="center"
    android:orientation="horizontal">

    <cn.lex_mung.client_android.mvp.ui.widget.RoundImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="matrix"
        app:layout_constraintDimensionRatio="h,32:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/round_10_1ec88b_all" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_30"
        app:layout_constraintStart_toStartOf="@+id/item_iv_icon"
        app:layout_constraintTop_toTopOf="@+id/item_iv_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:textSize="16sp"
        tools:visibility="visible"
        android:textColor="@color/c_ff"
        tools:text="在线法律顾问" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_30"
        android:layout_marginEnd="@dimen/qb_px_30"
        android:layout_marginTop="@dimen/qb_px_20"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/c_ff"
        app:layout_constraintStart_toStartOf="@+id/item_iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="为您的企业量身定制解决方法为您的企业量身定制解决方法为您的企业量身定制解决方法" />

    <TextView
        android:id="@+id/item_tv_certified"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_30"
        android:layout_marginEnd="@dimen/qb_px_35"
        android:layout_marginBottom="@dimen/qb_px_35"
        android:background="@drawable/round_100_cea769_all"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="已认证"
        android:textColor="@color/c_ff"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>