<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.lex_mung.client_android.mvp.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:TitleView_left_img="@drawable/ic_back2"
        app:TitleView_title="追问" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/white"
        android:gravity="start"
        android:hint="请输入追问内容"
        android:lines="6"
        android:maxLength="300"
        android:padding="@dimen/qb_px_35"
        android:textColor="@color/c_323232"
        android:textColorHint="@color/c_b5b5b5" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_75"
        android:layout_margin="@dimen/qb_px_35"
        android:background="@drawable/round_10_06a66a_all"
        android:gravity="center"
        android:text="追问"
        android:textColor="@android:color/white" />

</LinearLayout>
