<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/qb_px_35"
    android:paddingEnd="@dimen/qb_px_35">

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_25"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_323232"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/item_iv_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_717171"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/item_iv_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tv_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_25"
        app:layout_constraintTop_toBottomOf="@id/item_tv_address" />

    <ImageView
        android:id="@+id/item_iv_select"
        android:layout_width="@dimen/qb_px_60"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_item_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>