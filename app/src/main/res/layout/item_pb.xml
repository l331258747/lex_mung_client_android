<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.lex_mung.client_android.mvp.ui.widget.ProgressBar
        android:id="@+id/item_pb"
        android:layout_width="@dimen/qb_px_90"
        android:layout_height="@dimen/qb_px_90"
        android:layout_marginTop="@dimen/qb_px_10" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_14"
        android:includeFontPadding="false"
        android:textColor="@color/c_b5b5b5"
        android:textSize="12sp" />
</LinearLayout>