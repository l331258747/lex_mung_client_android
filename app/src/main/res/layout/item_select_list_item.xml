<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_35"
        android:layout_toStartOf="@+id/item_tv_content"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/c_323232"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_marginTop="@dimen/qb_px_35"
        android:gravity="end"
        android:includeFontPadding="false"
        android:textColor="@color/c_b5b5b5"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_iv_select"
        android:layout_width="@dimen/qb_px_60"
        android:layout_height="@dimen/qb_px_90"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/qb_px_15"
        android:src="@drawable/ic_item_select"
        android:visibility="gone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_2"
        android:layout_below="@id/item_tv_title"
        android:layout_marginTop="@dimen/qb_px_35"
        android:background="@color/c_f4f4f4" />
</RelativeLayout>