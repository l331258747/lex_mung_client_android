<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ff"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/qb_px_35" />

    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_120"
        android:paddingStart="@dimen/qb_px_35"
        android:paddingEnd="@dimen/qb_px_35"
        android:background="@drawable/button_withe_down"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="@string/text_clear_cache"
        android:textColor="@color/c_323232"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_clear_cache"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="@id/tv_clear_cache" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/qb_px_35"
        android:paddingRight="@dimen/qb_px_35"
        android:src="@color/c_f4f4f4"
        app:layout_constraintTop_toBottomOf="@id/tv_clear_cache" />

    <TextView
        android:id="@+id/tv_version_update"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_120"
        android:layout_marginTop="@dimen/qb_px_2"
        android:background="@drawable/button_withe_down"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/qb_px_35"
        android:paddingEnd="@dimen/qb_px_35"
        android:text="@string/text_version_update"
        android:textColor="@color/c_323232"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_clear_cache" />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/qb_px_50"
        android:includeFontPadding="false"
        android:textColor="@color/c_b5b5b5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_version_update"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="@id/tv_version_update" />

    <ImageView
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_version_update"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="@id/tv_version_update" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/c_f4f4f4"
        app:layout_constraintTop_toBottomOf="@id/tv_version_update" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_100"
        android:layout_marginTop="@dimen/qb_px_2"
        android:background="@color/c_ea5514"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/qb_px_35"
        android:paddingEnd="@dimen/qb_px_35"
        android:text="@string/text_logout"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</android.support.constraint.ConstraintLayout>