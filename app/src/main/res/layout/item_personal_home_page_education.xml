<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_20"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_323232"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_tv_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="湖南湘君律师事务所" />

    <TextView
        android:id="@+id/item_tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/c_323232"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="律所合伙人" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_20"
        android:includeFontPadding="false"
        android:textColor="@color/c_717171"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/item_tv_title"
        tools:text="2018/08-2019-04" />

    <View
        android:id="@+id/item_view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_2"
        android:layout_marginTop="@dimen/qb_px_20"
        android:background="@drawable/ic_personal_home_page_line"
        app:layout_constraintTop_toBottomOf="@id/item_tv_time" />
</android.support.constraint.ConstraintLayout>