<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_300"
        android:gravity="center"
        android:orientation="horizontal">

        <cn.lex_mung.client_android.mvp.ui.widget.DatePickerView
            android:id="@+id/dp_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <cn.lex_mung.client_android.mvp.ui.widget.DatePickerView
            android:id="@+id/dp_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <cn.lex_mung.client_android.mvp.ui.widget.DatePickerView
            android:id="@+id/dp_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <cn.lex_mung.client_android.mvp.ui.widget.DatePickerView
            android:id="@+id/dp_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <cn.lex_mung.client_android.mvp.ui.widget.DatePickerView
            android:id="@+id/dp_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_90"
        android:orientation="horizontal"
        android:padding="@dimen/qb_px_2">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_withe_down"
            android:gravity="center"
            android:text="@string/text_cancel"
            android:textColor="@color/c_b5b5b5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_withe_down"
            android:gravity="center"
            android:text="@string/text_confirm"
            android:textColor="@color/c_06a66a"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>