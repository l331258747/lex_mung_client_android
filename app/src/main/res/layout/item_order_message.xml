<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_150"
    android:layout_marginStart="@dimen/qb_px_35"
    android:layout_marginEnd="@dimen/qb_px_35"
    android:background="@drawable/round_10_ffffff_all"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/qb_px_140" />

    <ImageView
        android:id="@+id/item_iv_avatar"
        android:layout_width="@dimen/qb_px_90"
        android:layout_height="@dimen/qb_px_90"
        android:layout_marginStart="@dimen/qb_px_25"
        android:layout_marginTop="@dimen/qb_px_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_tv_count"
        android:layout_width="@dimen/qb_px_15"
        android:layout_height="@dimen/qb_px_15"
        android:background="@drawable/round_100_ea5514_all"
        android:gravity="center"
        android:includeFontPadding="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/item_iv_avatar"
        app:layout_constraintTop_toTopOf="@id/item_iv_avatar" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_323232"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/item_tv_time"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginEnd="@dimen/qb_px_25"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_b5b5b5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/qb_px_25" />

    <TextView
        android:id="@+id/item_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/qb_px_60"
        android:layout_marginBottom="@dimen/qb_px_30"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_717171"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline1" />
</android.support.constraint.ConstraintLayout>