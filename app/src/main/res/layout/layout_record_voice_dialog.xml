<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_250"
    android:layout_height="wrap_content"
    android:alpha="0.5"
    android:background="@drawable/round_10_000000_all"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_35"
        android:text="10"
        android:textColor="#2DD0CF"
        android:textSize="60sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_mic_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_volume_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/qb_px_35"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_mic_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_marginBottom="@dimen/qb_px_35">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="••••••"
                android:textColor="@color/c_ff"
                android:textSize="12sp" />

            <Chronometer
                android:id="@+id/c_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="@color/c_ff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="••••••"
                android:textColor="@color/c_ff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_record_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_35"
        android:text="手指上滑，取消发送"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
</LinearLayout>