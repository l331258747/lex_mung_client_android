<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/qb_px_20"
    android:paddingBottom="@dimen/qb_px_20">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/qb_px_45"
        android:layout_height="@dimen/qb_px_45"
        tools:src="@drawable/ic_home_quick" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_45"
        android:layout_alignBaseline="@+id/iv_img"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_toEndOf="@+id/iv_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="合同审查起草"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_25"
            android:scaleType="fitCenter"
            android:layout_marginLeft="-10dp"
            tools:src="@drawable/ic_fail_resend"/>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img"
        android:layout_marginTop="@dimen/qb_px_20"
        android:padding="@dimen/qb_px_5"
        tools:text="平台优选律师，平台品质担保！"
        android:textColor="@color/c_bebebe"
        android:maxLines="1"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img"
        android:layout_marginTop="@dimen/qb_px_20"
        tools:text="平台优选律师，平台品质担保!"
        android:background="@drawable/round_40_fef0d5_all"
        android:paddingLeft="@dimen/qb_px_10"
        android:paddingRight="@dimen/qb_px_10"
        android:paddingTop="@dimen/qb_px_3"
        android:paddingBottom="@dimen/qb_px_3"
        android:textColor="@color/c_FAB42D"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textSize="10sp" />

</RelativeLayout>
