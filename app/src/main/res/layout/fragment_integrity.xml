<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/qb_px_35" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/qb_px_35" />

        <TextView
            android:id="@+id/tv_social_function_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_35"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_social_function"
            android:textColor="@color/c_717171"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_social_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_35"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/qb_px_15"
            android:textColor="@color/c_323232"
            android:textColorHint="@color/c_b5b5b5"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_social_function_text"
            app:layout_constraintTop_toTopOf="@id/tv_social_function_text" />

        <View
            android:id="@+id/view_line_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginTop="@dimen/qb_px_35"
            android:background="@color/c_f4f4f4"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/tv_social_function"
            app:layout_constraintTop_toBottomOf="@id/tv_social_function" />

        <TextView
            android:id="@+id/tv_personal_honor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_35"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_personal_honor"
            android:textColor="@color/c_717171"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_line_1" />

        <TextView
            android:id="@+id/tv_personal_honor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_35"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/qb_px_15"
            android:textColor="@color/c_323232"
            android:textColorHint="@color/c_b5b5b5"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/tv_personal_honor_text"
            app:layout_constraintTop_toTopOf="@id/tv_personal_honor_text" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_35"
            android:layout_marginTop="@dimen/qb_px_35"
            android:background="@color/c_f4f4f4"
            app:layout_constraintTop_toBottomOf="@id/tv_personal_honor" />

        <TextView
            android:id="@+id/tv_join_lawyer_team_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_110"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_join_lawyer_team"
            android:textColor="@color/c_717171"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_2" />

        <View
            android:id="@+id/view_line_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:background="@color/c_f4f4f4"
            app:layout_constraintTop_toBottomOf="@id/tv_join_lawyer_team_text" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_lawyer_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/view_line_3" />

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/c_f4f4f4"
            android:minHeight="@dimen/qb_px_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_lawyer_team" />

        <include
            android:id="@+id/no_layout"
            layout="@layout/layout_empty_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>