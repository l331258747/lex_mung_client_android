<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f4f4f4">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_view">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent">

                <include layout="@layout/layout_personal_home_page" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_100"
                    android:layout_marginTop="25dp"
                    android:background="@color/c_06a66a"
                    android:visibility="invisible"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_back_toolbar"
                            android:layout_width="@dimen/qb_px_60"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_withe_back" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_120"
                android:layout_alignParentBottom="true"
                android:background="@color/c_ff"
                app:tabBackground="@null"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/c_06a66a"
                app:tabIndicatorHeight="@dimen/qb_px_5"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/c_323232"
                app:tabTextColor="@color/c_717171" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_1"
                android:background="@color/c_b5b5b5" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_140"
        android:layout_above="@id/view_bottom"
        android:background="@color/c_ff">

        <View
            android:id="@+id/view_release_demand"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_100"
            android:layout_marginStart="@dimen/qb_px_35"
            android:background="@drawable/round_100_06a66a_all"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_release_demand"
            android:layout_width="@dimen/qb_px_40"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginStart="@dimen/qb_px_25"
            android:src="@drawable/ic_release_demand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/view_release_demand"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_release_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_15"
            android:includeFontPadding="false"
            android:text="@string/text_release_demand"
            android:textColor="@color/c_ff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_release_demand"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_1"
            android:layout_width="@dimen/qb_px_25"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_release_demand" />

        <View
            android:id="@+id/view_telephone_counseling"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_100"
            android:layout_marginEnd="@dimen/qb_px_35"
            android:background="@drawable/round_100_06a66a_all"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view_3"
            app:layout_constraintStart_toStartOf="@id/view_2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_2"
            android:layout_width="@dimen/qb_px_25"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/iv_telephone_counseling" />

        <ImageView
            android:id="@+id/iv_telephone_counseling"
            android:layout_width="@dimen/qb_px_40"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginEnd="@dimen/qb_px_15"
            android:src="@drawable/ic_telephone_counseling"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_telephone_counseling_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_telephone_counseling_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qb_px_5"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_telephone_counseling"
            android:textColor="@color/c_ff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_telephone_counseling"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_telephone_counseling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qb_px_25"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_tel_price"
            android:textColor="@color/c_7afc9e"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_telephone_counseling_1"
            app:layout_constraintEnd_toStartOf="@id/view_3" />

        <View
            android:id="@+id/view_3"
            android:layout_width="@dimen/qb_px_35"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_above="@id/view"
        android:background="@color/c_b5b5b5" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c_50" />
</RelativeLayout>