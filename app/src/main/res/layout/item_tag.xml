<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30" />

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_15"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/c_ff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_iv_icon"
        app:layout_constraintStart_toEndOf="@id/item_iv_icon"
        app:layout_constraintTop_toTopOf="@id/item_iv_icon" />

    <View
        android:layout_width="@dimen/qb_px_35"
        android:layout_height="@dimen/qb_px_30"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_title"
        app:layout_constraintStart_toEndOf="@id/item_tv_title"
        app:layout_constraintTop_toTopOf="@id/item_tv_title" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_20"
        app:layout_constraintTop_toBottomOf="@id/item_iv_icon" />
</android.support.constraint.ConstraintLayout>