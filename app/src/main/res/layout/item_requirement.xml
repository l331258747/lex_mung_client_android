<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/qb_px_35"
    android:layout_marginTop="@dimen/qb_px_35"
    android:layout_marginEnd="@dimen/qb_px_35"
    android:background="@drawable/round_10_ffffff_all"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_60"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/qb_px_35"
        android:paddingEnd="@dimen/qb_px_35">

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="2018-11-11 23:23:23"
            android:textColor="@color/c_b5b5b5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/qb_px_10"
            android:gravity="end"
            android:includeFontPadding="false"
            android:text="待接单"
            android:textColor="@color/c_323232"
            android:textSize="12sp" />
    </LinearLayout>

    <View
