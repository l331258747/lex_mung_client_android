<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_card_bg_alldata_grab_1"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom2"
        app:layout_constraintEnd_toEndOf="@+id/view_card"
        app:layout_constraintStart_toStartOf="@+id/view_card"
        app:layout_constraintTop_toTopOf="@+id/view_card" />

    <ImageView
        android:id="@+id/view_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_me_vip_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_40"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_marginEnd="@dimen/qb_px_30"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/c_ff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_btn"
        app:layout_constraintStart_toStartOf="@+id/view_card"
        app:layout_constraintTop_toTopOf="@+id/view_card"
        tools:text="标题标题标题标题标题标标题标题题标题标题标题标" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/qb_px_40"
        android:background="@drawable/round_40_d2ac6b_all"
        android:gravity="center"
        android:paddingStart="@dimen/qb_px_15"
        android:paddingTop="@dimen/qb_px_5"
        android:paddingEnd="@dimen/qb_px_15"
        android:paddingBottom="@dimen/qb_px_5"
        android:text="立即使用"
        android:textColor="@color/c_282A3E"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="@+id/view_card"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_30"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <View
        android:id="@+id/view_bottom2"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_70"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

</android.support.constraint.ConstraintLayout>